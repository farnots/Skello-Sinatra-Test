<h2 class="mt-5">Liste des articles</h2>
<div class="row ">
  <% @database.each_with_index do |item, index| %>
    <div class="col-lg-4 d-flex align-items-stretch space">
      <div class="card" >
        <% if item[:photo].nil? %>
          <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect fill="#55595c" width="100%" height="225"/><text fill="#eceeef" dy=".3em" x="40%" y="50%">No image</text></svg>

        <% else %>
          <img src="<%= item[:photo] %>" class="card-img-top" width="100%" height="225"> 
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= item[:title] %> 
          <span class="badge badge-info">
            <% if item[:rating].nil? %>
              <% item[:rating] = 0 %>
            <% end %>
            <%= item[:rating]%>/10
          </span>
          </h5>
          <p class="card-text"><%= item[:content].truncate(100) %><br/>
           <% @comment = @comments[index]%>
           <small><%= @comment.count %> comments</small></p>
          <a href="/posts/<%= item[:title] %>" class="btn btn-primary">Read Article </a>
        </div>
      </div>
    </div>
  <% end %>
</div>

